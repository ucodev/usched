## Preload ##
if [ -e "./uconf/params/default/preload" ]; then
	. ./uconf/params/default/preload
fi

if [ -e "./uconf/params/`uname`/preload" ]; then
	. ./uconf/params/`uname`/preload
fi

## Check usage ##
if [ ${#} -ne 2 ]; then
	echo "Usage: ${0} <sysdirname> <sysdirpath>"
	exit 1;
fi

if [ ! -e "./uconf/params/user/dir" ]; then
	mkdir -p uconf/params/user/dir
fi

case "${1}" in
bin)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
cache)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
conf)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
doc)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
include)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
lib)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
man)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
run)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
sbin)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
share)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
tmp)
	printf -- ${2} > uconf/params/user/dir/${1}
	;;
*)
	echo "Invalid sysdirname: ${1}."
	exit 1
esac

echo "System '${1}' directory set to '${2}'"

exit 0

